# Editorial PR Matchmaking Platform - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME="Editorial PR Matchmaking"
DEBUG=false

# Database
DATABASE_URL="sqlite:///./editorial_pr.db"

# Security - REQUIRED in production
SECRET_KEY="your-secret-key-min-32-characters-long"

# LLM Provider
# Options: "mock" (testing), "deepseek" (production)
LLM_PROVIDER="mock"

# DeepSeek API (required if LLM_PROVIDER=deepseek)
DEEPSEEK_API_KEY=""
DEEPSEEK_BASE_URL="https://api.deepseek.com"
DEEPSEEK_MODEL="deepseek-chat"
